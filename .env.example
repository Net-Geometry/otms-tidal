# Supabase Configuration
VITE_SUPABASE_PROJECT_ID=your_project_id_here
VITE_SUPABASE_PUBLISHABLE_KEY=your_publishable_key_here
VITE_SUPABASE_URL=https://your_project_id.supabase.co
VITE_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Firebase Web Configuration (for client-side FCM)
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id_here
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
VITE_FIREBASE_APP_ID=your_firebase_app_id_here

# Firebase Service Account Configuration - Copy to Supabase env variables
# This is needed for server-side Firebase operations
FIREBASE_SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"...","private_key":"...","client_email":"...","client_id":"..."}'

# VAPID Keys for Push Notifications
# Generate new keys using: node scripts/generate-vapid-keys.cjs
# SECURITY: Keep private key secure, never commit to version control
# Use separate keys for development and production environments
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@otms.com

# SEO Configuration
VITE_ROBOTS=index, follow
